{
  "manifest_version": 3,
  "name": "小黃標-Threads User Profile Tag",
  "version": "1.0.0",
  "description": "將 Threads 用戶所在地等資訊，自動顯示在小黃標籤上。 Automatically extracts and reveals profile for quick identification.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
   "*://www.threads.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["queryManager.js", "injected.js"],
      "matches": ["*://www.threads.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://www.threads.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Threads User Location Tag",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
